@model SoccerForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<h1>@Model.Title</h1>

<div>
    @if (!string.IsNullOrEmpty(Model.ImageFilename))
    {
        <img src="~/images/@Model.ImageFilename" alt="Image for @Model.Title" class="img-fluid" />
    }
</div>

<h4>Content</h4>
<p>@Model.Content</p>

<h5>Comments:</h5>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>
            <strong>@comment.UserName</strong> (@comment.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")):
            @comment.Content
        </li>
    }


</ul>

<div>
    <a asp-action="Index">Back to Discussions</a>
</div>
